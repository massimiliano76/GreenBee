extends layout

block content
    .container
        p Ciao #{user.nome}
        form(role='form', action="/admin/addUser",method="post")
            input(type='text', name='nome', placeholder='Nome')
            input.form-control(type='text', name="username", placeholder='Enter Username')
            input.form-control(type='password', name="password", placeholder='Password')
            input(type='checkbox', name='admin', placeholder='Amministratore')
            button.btn.btn-default(type='submit') Registralo