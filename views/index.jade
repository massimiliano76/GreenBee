doctype html
html
head
    title= title
    //meta(name='viewport', content='width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no')
    meta(charset='UTF-8')
    meta(http-equiv='Content-Type', content='text/html; charset=utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no')

    link(rel='stylesheet', href='/bootstrap-3.3.7/css/bootstrap.min.css')
    //link(rel='stylesheet', href='/stylesheets/style.css')
body
    div(id='carousel-example-generic' data-ride='carousel').carousel.slide
        // Indicators
        //ol.carousel-indicators
            li.active(data-target='#carousel-example-generic', data-slide-to='0')
            li(data-target='#carousel-example-generic', data-slide-to='1')
            li(data-target='#carousel-example-generic', data-slide-to='2')
        // Wrapper for slides
        .carousel-inner(style='height:180px')
            .item.active
                img(src='/img/1.jpg',alt='banner').center-block
                .carousel-caption
                    .caption-wrapper
                        .caption-info
                            h1(style='font-family:verdana;font-size:360%;center') BioOrtoStar
            .item
                img.img-responsive(src='/img/3.jpg',alt='Responsive image').center-block
                .carousel-caption
            .item
                img.img-responsive(src='/img/4.jpg',alt='Responsive image').center-block
                .carousel-caption
        // Controls
        a.left.carousel-control(href='#carousel-example-generic', role='button', data-slide='prev')
            span.glyphicon.glyphicon-chevron-left(aria-hidden='true')
            span.sr-only Previous
        a.right.carousel-control(href='#carousel-example-generic', role='button', data-slide='next')
            span.glyphicon.glyphicon-chevron-right(aria-hidden='true')
            span.sr-only Next
    center
        .container
            .row
                div.col-xs-12.col-sm-12.col-md-12.col-lg-12
                    h1.text-muted.text-center=title
                    p.text-muted.text-center Welcome to #{title}
                    a.btn.btn-info.btn.active(href='/login', role='button') Login
            .row
                .col-xs-12.col-sm-12.col-md-12.col-lg-12
                    .buttons
                        a.btn.btn-default.btn.active(href='/login', role='button') Gli orti
                        a.btn.btn-default.btn.active(href='/login', role='button') Social
                        a.btn.btn-default.btn.active(href='/login', role='button') Chi siamo
                        a.btn.btn-default.btn.active(href='/login', role='button') Market
                    a(href='/login')
                        img(src='/img/l1.png' style='height:80px')
                    a(href='/login')
                        img(src='/img/l2.jpg' style='height:80px')
                    a(href='/login')
                        img(src='/img/l3.png' style='height:80px')

    script(src='/bootstrap-3.3.7/js/jquery-3.1.1.min.js')
    script(src='/bootstrap-3.3.7/js/bootstrap.min.js')
