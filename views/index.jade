    div(id='carousel-example-generic' data-ride='carousel').carousel.slide
        // Wrapper for slides
        .carousel-inner
            .item.active
                img(src='/img/7.png',alt='banner').center-block
                .carousel-caption
                    .caption-wrapper
                        .caption-info
                            h1(style='font-family:verdana;font-size:360%;center') BioOrtoStar
            .item
                img(src='/img/8.png',alt='Responsive image').center-block
                .carousel-caption
            .item
                img.img-responsive(src='/img/sfondoLegnoTransparent.png',alt='Responsive image').center-block
                .carousel-caption
        // Controls
        a.left.carousel-control(href='#carousel-example-generic', role='button', data-slide='prev')
            span.glyphicon.glyphicon-chevron-left(aria-hidden='true')
            span.sr-only Previous
        a.right.carousel-control(href='#carousel-example-generic', role='button', data-slide='next')
            span.glyphicon.glyphicon-chevron-right(aria-hidden='true')
            span.sr-only Next
