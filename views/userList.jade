extends layout

block content
    .row
        .col-xs-12.col-sm-12.col-md-12.col-lg-3
            center
                a(type='button',href='/admin/addUser').btn.btn-mug  Aggiungi Un Utente
        .col-xs-12.col-sm-12.col-md-12.col-lg-8
            table.table.table-striped.pull-left
                tr
                    th(colspan='5').text-center.success Ecco gli utenti registrati al tuo orto
                tr
                    th Nome
                    th Username
                    th Amministratore
                    th(colspan='2') Opzioni
                each utente in listaUtenti
                    tr
                        td #{utente.nome}
                        td #{utente.username}
                        td #{utente.admin}
                        td
                            form(role='form', action="/admin/removeUtente",method="post", onsubmit="return confirm('Vuoi Rimuovere #{utente.nome}?')")
                                input(type="hidden" name="utenteId" value="#{utente._id}")
                                button(type="submit").btn.btn-mug Rimuovi
                        td
                            form(role='form', action="/admin/updateUser",method="post")
                                input(type="hidden" name="utenteId" value="#{utente._id}")
                                button(type='submit' href="/admin/updateUser").btn.btn-mug  Modifica
