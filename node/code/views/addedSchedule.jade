extends layout

block content
    .row
        .col-xs-12.col-sm-12.col-md-6.col-md-offset-3.col-lg-6.col-lg-offset-3
            h1.text-success Azione aggiunta con successo
            .row
                .col-xs-12.col-sm-12.col-md-6.col-lg-6
                    h3.text-primary Azione:  #{schedule.nome}
            .row
                .col-xs-12.col-sm-12.col-md-6.col-lg-6
                    h3.text-primary Ricompensa:  #{schedule.ricompensa}
            .row
                .col-xs-12.col-sm-12.col-md-6.col-lg-6
                    h3.text-primary Data: #{schedule.ultimoReset}
            .row
                .col-xs-12.col-sm-12.col-md-6.col-lg-6
                    h3.text-primary Scadenza: #{schedule.scadenza}
            .row
                .col-xs-12.col-sm-12.col-md-6.col-lg-6
                    a(href="/admin/toDoListAdmin").pull-right.btn.btn-info Torna alla ToDo List